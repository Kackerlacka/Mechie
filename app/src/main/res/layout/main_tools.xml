<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="6dp" >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_hardnessconverter"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="6dp"
            android:clickable="true"
            android:onClick="hardnessConverter"
            card_view:cardCornerRadius="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="false"
            card_view:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/hardness_converter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/header_hardnessconverter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:background="@color/colorAccentBlue"
                    android:padding="10dp"
                    android:text="Hardness Converter"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_dimensionlessnumbers"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="6dp"
            android:clickable="true"
            android:onClick="dimensionlessNumbers"
            card_view:cardCornerRadius="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="false"
            card_view:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dimensionlessNumbers_calculator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/header_dimensionlessnumbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:background="@color/colorAccentBlue"
                    android:padding="10dp"
                    android:text="Dimensionless Numbers Calculator"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="6dp"
            android:clickable="true"
            android:onClick="piTheorem"
            card_view:cardCornerRadius="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="false"
            card_view:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/buckinghamPi_theorem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:background="@color/colorAccentBlue"
                    android:padding="10dp"
                    android:text="Buckingham Pi Calculator"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_boltsizer"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="6dp"
            android:clickable="true"
            android:onClick="saePicker"
            card_view:cardCornerRadius="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="false"
            card_view:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bolt_sizer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/header_boltsizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:background="@color/colorAccentBlue"
                    android:padding="10dp"
                    android:text="Bolt Sizer"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="6dp"
            android:clickable="true"
            android:onClick="springDesigner"
            card_view:cardCornerRadius="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="false"
            card_view:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/spring_designer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:background="@color/colorAccentBlue"
                    android:padding="10dp"
                    android:text="Helical Spring Designer"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>